<%= simple_form_for ([@client, @session]), :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :dateservice, :as => :date_picker, label: "Session Date" %>
    <%= error_span(@session[:dateservice]) %>
  <%= f.input :copayowed, label: "Client Copay Owed" %>
    <%= error_span(@session[:copayowed]) %>
  <%= f.input :copayd, label: "Client Copay Paid" %>
    <%= error_span(@session[:copayd]) %>
  <%= f.input :claimsubmit, :as => :date_picker, label: "Claim Submit Date" %>
    <%= error_span(@session[:claimsubmit]) %>
  <%= f.input :claimrecvd, :as => :date_picker, label: "Claim Paid Date" %>
    <%= error_span(@session[:claimrecvd]) %><br>
  <%= f.input :claimowed, label: "Claim Owed" %>
    <%= error_span(@session[:claimowed]) %>
  <%= f.input :claimpd, label: "Claim Paid" %>
    <%= error_span(@session[:claimpd]) %>
  <%= f.input :sessionnotes, label: "Session Notes", :input_html => { :rows => 3, :cols =>120 } %>
    <%= error_span(@session[:sessionnotes]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                client_sessions_path, :class => 'btn btn-default' %>
<% end %>
